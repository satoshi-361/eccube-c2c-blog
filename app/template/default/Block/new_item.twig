<div class="new-products">
    <div class="ec-secHeading">
        <span class="ec-secHeading__en">新着商品</span>
    </div>
    <div class="ec-shelfRole">
        {% set productRepository = repository('Eccube\\Entity\\Product') %}
        {% set newProducts = productRepository.findBy({}, {'create_date': 'DESC'}, 5) %}
        
        <ul class="ec-shelfGrid" style="flex-direction: column">
            {% for Product in newProducts %}
                <li style="margin-bottom: 20px">
                    <a href="{{ url('cm_blog_pro_page_detail', {'id': Product.Blog.id}) }}">
                        <img src="{{ asset(Product.mainFileName|no_image_product, "save_image") }}" alt="{{ Product.name }}">
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
